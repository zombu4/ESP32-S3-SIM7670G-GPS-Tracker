# ESP32-S3 32-bit Optimized Configuration
# CPU Performance - Run at full 240MHz (32-bit dual core)
CONFIG_ESP32S3_DEFAULT_CPU_FREQ_240=y
# CONFIG_ESP32S3_DEFAULT_CPU_FREQ_160 is not set
CONFIG_ESP32S3_DEFAULT_CPU_FREQ_MHZ=240
CONFIG_ESP_DEFAULT_CPU_FREQ_MHZ_240=y
# CONFIG_ESP_DEFAULT_CPU_FREQ_MHZ_160 is not set
CONFIG_ESP_DEFAULT_CPU_FREQ_MHZ=240

# Compiler Optimization for 32-bit Performance
CONFIG_COMPILER_OPTIMIZATION_PERF=y
# CONFIG_COMPILER_OPTIMIZATION_DEBUG is not set
# CONFIG_COMPILER_OPTIMIZATION_SIZE is not set
CONFIG_COMPILER_OPTIMIZATION_ASSERTIONS_ENABLE=y

# Enable PSRAM for more memory (2MB embedded PSRAM)
CONFIG_SPIRAM=y
CONFIG_SPIRAM_MODE_OCT=y
CONFIG_SPIRAM_TYPE_AUTO=y
CONFIG_SPIRAM_CLK_80M=y
CONFIG_SPIRAM_FETCH_INSTRUCTIONS=y
CONFIG_SPIRAM_RODATA=y
CONFIG_SPIRAM_ALLOW_BSS_SEG_EXTERNAL_MEMORY=y
CONFIG_SPIRAM_ALLOW_NOINIT_SEG_EXTERNAL_MEMORY=y

# FreeRTOS Optimization for 32-bit dual core
CONFIG_FREERTOS_HZ=1000
CONFIG_FREERTOS_ASSERT_ON_UNTESTED_FUNCTION=y
CONFIG_FREERTOS_CHECK_STACKOVERFLOW_PTRVAL=y
CONFIG_FREERTOS_THREAD_LOCAL_STORAGE_POINTERS=1
CONFIG_FREERTOS_IDLE_TASK_STACKSIZE=1536
CONFIG_FREERTOS_ISR_STACKSIZE=1536
CONFIG_FREERTOS_INTERRUPT_BACKTRACE=y
CONFIG_FREERTOS_ENABLE_TASK_SNAPSHOT=y
CONFIG_FREERTOS_PLACE_FUNCTIONS_INTO_FLASH=y

# Memory optimization for 32-bit architecture  
CONFIG_LWIP_TCP_MSS=1440
CONFIG_LWIP_TCP_RECVMBOX_SIZE=6
CONFIG_LWIP_TCP_SND_BUF_DEFAULT=5744
CONFIG_LWIP_TCP_WND_DEFAULT=5744
CONFIG_LWIP_UDP_RECVMBOX_SIZE=6

# Enable dual core support
CONFIG_FREERTOS_UNICORE=n
CONFIG_ESP_SYSTEM_SINGLE_CORE_MODE=n

# ðŸ’€ðŸ”¥ ESP32-S3 HARDWARE ACCELERATION SETTINGS ðŸ”¥ðŸ’€
# Enable all ESP32-S3 hardware accelerators for maximum performance

# UART Hardware Acceleration
CONFIG_UART_ISR_IN_IRAM=y

# I2C Hardware Acceleration  
CONFIG_I2C_ISR_IRAM_SAFE=y

# SPI Hardware Acceleration
CONFIG_SPI_MASTER_ISR_IN_IRAM=y

# Cache optimization
CONFIG_ESP32S3_INSTRUCTION_CACHE_32KB=y
CONFIG_ESP32S3_DATA_CACHE_32KB=y
CONFIG_ESP32S3_INSTRUCTION_CACHE_8WAYS=y
CONFIG_ESP32S3_DATA_CACHE_8WAYS=y
CONFIG_ESP32S3_ICACHE_ASSOCIATED_WAYS_8=y
CONFIG_ESP32S3_DCACHE_ASSOCIATED_WAYS_8=y

# Memory management optimization
CONFIG_HEAP_CORRUPTION_DETECTION=y
CONFIG_ESP_SYSTEM_CHECK_INT_LEVEL_4=y

# Timer optimization for precise timing
CONFIG_ESP_TIMER_TASK_STACK_SIZE=4096
CONFIG_ESP_TIMER_INTERRUPT_LEVEL=1

# Hardware crypto acceleration
CONFIG_ESP32S3_CRYPTO_DPA_PROTECTION=y

# Power management for sustained performance
CONFIG_PM_ENABLE=y
CONFIG_PM_DFS_INIT_AUTO=y